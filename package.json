{
  "name": "mozhno-pay",
  "version": "0.1.0",
  "author": "Sergey Khmelevskoy <sergey@khmelevskoy.co> (https://github.com/dpmango/)",
  "private": true,
  "engines": {
    "node": ">=16.11.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development craco start",
    "build": "cross-env NODE_ENV=production GENERATE_SOURCEMAP=false craco build",
    "test": "craco test",
    "lint": "bash bin/lint.sh",
    "lint:js:fix": "eslint './src/**/*.{js,jsx}' --fix",
    "lint:css:fix": "stylelint './src/**/*.{css,less,scss,sass}' --fix",
    "deploy": "npm run build && cp build/index.html build/200.html && surge --project ./build --domain pay-app.surge.sh",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix"
    ],
    "*.{css,less,scss}": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "axios": "^0.27.2",
    "classnames": "^2.3.2",
    "dayjs": "^1.11.5",
    "formik": "^2.2.9",
    "i18next": "^21.10.0",
    "i18next-browser-languagedetector": "^6.1.8",
    "i18next-http-backend": "^1.4.4",
    "js-cookie": "^3.0.1",
    "lodash": "^4.17.21",
    "mobx": "^6.6.2",
    "mobx-react-lite": "^3.4.0",
    "react": "^18.2.0",
    "react-app-polyfill": "^3.0.0",
    "react-circular-progressbar": "^2.1.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-i18next": "^11.18.6",
    "react-input-mask": "^2.0.4",
    "react-modal": "^3.15.1",
    "react-phone-number-input": "^3.2.11",
    "react-router-dom": "^6.4.2",
    "react-select": "^5.4.0",
    "react-spinners": "^0.13.6",
    "swiper": "^8.4.3"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@babel/eslint-plugin": "^7.19.1",
    "@babel/preset-react": "^7.18.6",
    "@craco/craco": "^7.0.0-alpha.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "husky": "4",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "react-scripts": "5.0.1",
    "sass": "^1.55.0",
    "stylelint": "^14.13.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-config-standard": "^28.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.3.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "extends": [
      "plugin:react/recommended",
      "plugin:prettier/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "prettier/prettier": "error",
      "react/prop-types": "off",
      "react/state-in-constructor": [
        "error",
        "never"
      ],
      "react/display-name": [
        "off"
      ]
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-react"
    ]
  }
}
