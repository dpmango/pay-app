{
  "name": "react-app",
  "version": "0.1.0",
  "author": "Sergey Khmelevskoy <sergey@khmelevskoy.co> (https://github.com/dpmango/)",
  "private": true,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development craco start",
    "build": "cross-env NODE_ENV=production craco build",
    "test": "craco test",
    "lint": "bash bin/lint.sh",
    "lint:js:fix": "eslint './src/**/*.{js,jsx}' --fix",
    "lint:css:fix": "stylelint './src/**/*.{css,less,scss,sass}' --fix",
    "deploy": "npm run build && cp build/index.html build/200.html && surge --project ./build --domain pay-app.surge.sh",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix"
    ],
    "*.{css,less,scss}": [
      "stylelint --fix"
    ]
  },
  "dependencies": {
    "axios": "^0.27.2",
    "classnames": "^2.3.1",
    "dayjs": "^1.11.5",
    "formik": "^2.2.9",
    "lodash": "^4.17.21",
    "mobx": "^6.6.1",
    "mobx-react-lite": "^3.4.0",
    "react": "^18.2.0",
    "react-app-polyfill": "^3.0.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-input-mask": "^2.0.4",
    "react-modal": "^3.15.1",
    "react-router-dom": "^6.3.0",
    "react-select": "^5.4.0",
    "react-spinners": "^0.13.4",
    "react-tooltip": "^4.2.21"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.18.9",
    "@babel/eslint-plugin": "^7.18.10",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-react": "^7.18.6",
    "@craco/craco": "^7.0.0-alpha.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "husky": "4",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "raw-loader": "^4.0.2",
    "react-scripts": "5.0.1",
    "sass": "^1.54.4",
    "stylelint": "^14.10.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-config-standard": "^27.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.3.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "babelOptions": {
        "plugins": [
          "@babel/plugin-proposal-class-properties"
        ]
      }
    },
    "extends": [
      "plugin:react/recommended",
      "plugin:prettier/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "prettier/prettier": "error",
      "react/prop-types": "off",
      "react/state-in-constructor": [
        "error",
        "never"
      ],
      "react/display-name": [
        "off"
      ]
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ]
  }
}
